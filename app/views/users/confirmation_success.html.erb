<!DOCTYPE html>
<html>
	<head>
		<title>Tararira</title>
		<%= stylesheet_link_tag    'application', media: 'all' %>
		<%= javascript_include_tag 'application' %>
		<%= csrf_meta_tags %>
	</head>
	<body style="background-color:#076378">
		<div class="container">
			<div class="row" style="margin-top:20px">
				<div class="col-md-12">
					<div class="text-center">
						<% if mobile_device? %>
							<span style="color:white; font-size:24px; font-family:HeroLight">invertir.la</span>
						<% else %>
							<span style="color:white; font-size:24px; font-family:HeroLight">invertir.la (Mobile)</span>
						<% end %>
					</div>
				</div>
			</div>
			<div class="row" style="margin-top:15px">
				<div class="col-md-12">
					<%= image_tag "landingdesktopsup.png", style: "margin:0 auto;display:block" %>
				</div>
			</div>
			<div class="row" style="margin-top:15px">
				<div class="col-md-12 text-center">
					<%= image_tag "landingdesktopinf.png", style: "margin:0 auto;display:block" %>
				</div>
			</div>
			<div class="row" style="margin-top:15px">
				<div class="col-md-12">
					<div style="color:white; margin:0 auto; display:block; text-align:center; font-family:HeroLight">
						Preguntas Frecuentes | Contacto
						<!--<%= link_to "Preguntas Frecuentes", "#" %> | <%= link_to "Contacto", "#" %>-->
					</div>
				</div>
			</div>
		</div>

	</body>
</html>